[flake8]
# Maximum line length
max-line-length = 127

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    mlruns,
    notebooks

# Ignore specific error codes
# E501: line too long (handled by max-line-length)
# W503: line break before binary operator (conflicts with W504)
ignore = E501, W503

# Maximum complexity
max-complexity = 10

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:F401

